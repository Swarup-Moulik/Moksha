println("==== UNARY INCREMENT/DECREMENT SUITE ====");

// --- 1. Basic Prefix vs Postfix (Integer) ---
println("\n[Integer Prefix/Postfix]");
int a2 = 5;
print("Initial a2: "); println(a2); // 5

print("Postfix (a2++): ");
println(a2++); // Expect: 5
print("After Postfix: ");
println(a2);   // Expect: 6

print("Prefix (++a2): ");
println(++a2); // Expect: 7

int b2 = 5;
print("Postfix (b2--): ");
println(b2--); // Expect: 5
print("After Postfix: ");
println(b2);   // Expect: 4

print("Prefix (--b2): ");
println(--b2); // Expect: 3

// --- 2. Floating Point Support ---
println("\n[Double Prefix/Postfix]");
double d3 = 2.5;
print("Initial d3: "); println(d3); // 2.5

d3++; 
print("After d3++: "); 
println(d3); // Expect: 3.5

--d3;
print("After --d3: "); 
println(d3); // Expect: 2.5

// --- 3. Complex Expressions ---
println("\n[Expressions]");
int x2 = 10;
int y2 = 5;

// Calculation: (10 * 6) + 11 = 71
int res = (x2 * y2++) + ++x2;

print("Result: ");
println(res); // Expect: 61
print("Final x2: "); println(x2); // Expect: 11
print("Final y2: "); println(y2); // Expect: 6

// --- 4. Object Field Increment ---
println("\n[Object Field Increment]");
class Counter {
    public int count = 0;
}

Counter c = new Counter();
c.count++;
print("c.count after ++: ");
println(c.count); // Expect: 1

++c.count;
print("c.count after prefix ++: ");
println(c.count); // Expect: 2